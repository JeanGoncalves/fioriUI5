    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <App>
    	<pages>
    		<Page title="Nova pÃ¡gina">
    			<content>
